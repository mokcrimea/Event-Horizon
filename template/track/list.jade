extends ../layout/page

block main
  h1= title

block content
  - if (tracks.length)
    ul
      - each track in tracks
        li
          a(href="/track/"+track.id title=track.name)= track.name
          form(method="POST" id='remove_track' action="/track/#{track.id}")
            input(type="hidden" name="_method" value="DELETE")
            button(type="submit" onclick="return confirm('Вы уверены, что хотите удалить трек? Связанный альбом на Я.Фото так же будет удален!')") Delete

