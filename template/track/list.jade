extends ../layout/page

block main
  h1= title

block content
  - if (tracks.length)

      - each track in tracks
        li
          a(href="/track/"+track.id title=track.name)= track.name
            form(method="POST" action="/track/#{track.id}" width="50px")
              input(type="hidden" name="_method" value="DELETE")
              button(name="submit" type="submit") Delete

